<% provide(:title, 'Previously attended events') %>
<h1 class="text-center">
  <%= @user.name %> previously attended
  <%= pluralize(@previous_events.count, 'event') %>
</h1>

<% if @previous_events.any? %>
  <ol class="attended-events row">
    <%= render partial: 'events/event', collection: @previous_events %>
  </ol>
  <%= will_paginate @previous_events, 
      renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
<% end %>